for_window [app_id="pavucontrol"] floating enable
for_window [app_id="system-config-printer"] floating enable
for_window [all] border pixel 0
for_window [app_id="Cursor"] layout tabbed

# Márgenes globales
gaps inner 10
gaps outer 5

